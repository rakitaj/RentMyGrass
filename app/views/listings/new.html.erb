<div class="mdl-card mdl-shadow--6dp">
	<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
		<h2 class="mdl-card__title-text">New Listing</h2>
	</div>
	<div class="mdl-card__supporting-text">
		<%= simple_form_for @listing do |f| %>
			<div class="mdl-textfield mdl-js-textfield">
				<%= f.input :title, label: 'Name', :input_html => { :class => 'mdl-textfield__input' } %>
				<%= f.input :description, label: 'Description', :input_html => { :class => 'mdl-textfield__input' } %>
				<%= f.input :image, :input_html => { :class => 'mdl-textfield__input' } %>
			</div>
			<div class="mdl-card__actions mdl-card--border">
				<%= f.button :submit, :input_html => { :class => 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' } %>
			</div>
		<% end %>
	</div>
</div>

<%= link_to "Back", listings_path, :class => "mdl-navigation__link" %>
