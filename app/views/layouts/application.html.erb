<!DOCTYPE html>
<html>
  <head>
    <title>RentMyGrass</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  	<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "UrbShare", '#', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", :controller => "home", :action => "index" %></li>
            <li><%= link_to "About Us", :controller => "home", :action => "about" %></li>
            <li><%= link_to "Login", :controller => "users", :action => "login" %></li>
            <li><%= link_to "Sign Up", :controller => "users", :action => "signup" %></li>
          </ul>
        </nav>
      </div>
    </header>
  	<div class="container">
    	<%= yield %>
  	</div>
  </body>
</html>
